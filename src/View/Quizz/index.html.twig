{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container ">
		<div class="row justify-content-center text-center">
			<div class="col-xs-4">
				<img class="quizz-pic" src="/assets/images/{{categories.image}}" alt="image de la {{categories.name}}"></div>
			<div class="col-xs-6">
				<h1 class="mx-auto my-3">
					Catégorie
					{{categories.name}}
				</h1>
			</div>
		</div>
	</div>
	{# le track.path retourne le nom-du-fichier.mp3 a inclure dans le lecteur audio
				en rajoutant le chemin complet : /uploads/tracks/{{track.path}}
				l'array tracks est recuperer dans la bdd de maniere random. Refresh pour voir l'ordre la liste changer #}
	{% for track in tracks %}
		<li>{{track.path}}</li>
	{% endfor %}


	<div class="answer-center category">

		<h2 class="col-12 mx-auto my-1" style='width:fit-content;'>Devine le titre du morceau :</h2>
		{{track.name}}
		<form action="" method="POST">
			<label for="proposal"></label>
			<input id="proposal" name="proposal" type="text" placeholder="votre réponse">
			<div class="button-flex">
				<input class="button-valid" type="submit" value="Valider">
				<a class="pass" href="/game/track&id={{ track.id }}">Passer</a>
			</div>
		</form>


	</div>
{% endblock %}
